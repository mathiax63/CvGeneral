<h1>Editar Diploma</h1>
 <form action="/admin/admin/editarDiploma" method="POST" enctype="multipart/form-data" style="margin: 0px 30px ;">
                                  <input type="hidden" value="{{producto.id}}"name="id">

                    <section class="categorias">
                        
                        <article class="Datos-producto">
                           
                            <div class="description">
                                <label for="titulo">Titulo</label>
                                <input type="text" name="titulo" id="nombreP" value="{{producto.titulo}}">
                                
                            </div>
                            <div class="description">
                                <label for="descripcion">Descripcion</label>
                                <input type="text" name="descripcion"  id="marcaP" value="{{producto.descripcion}}">
                                
                            </div>
                              <div class="description">
                                <label for="academia">Academia</label>
                                <input type="text" name="academia"  id="marcaP" value="{{producto.academia}}" >
                                
                            </div>
        
                            <div class="description">
                                <label for="descargadiploma">Descarga de diploma</label>
                                <input type="text" name="descargadiploma" value ="{{producto.descargadiploma}}" >
                                
                            </div>
                        </article>
                        
                        
                       

            
                    </section>
                    
                   
                        <section class="sectionDeProyectos">
                            <article class="carga-fotos">
                                <label for="">Fecha de inicio</label><input name="fechadeinicio" type="date" value="{{producto.fechadeinicio}}">
                                <label for="imagenes">Subir imágenes</label>
                                <input id="imagenP" type="file" name="imagenes" accept="image/*" value="{{producto.imagenes}}">
                                <div class="checkbox"><input class="checkbox" type="checkbox" name="img_delete" value="1">Desea eliminar la imagen vieja?
                                <input type="hidden" name="img_original" value="{{producto.imagenes}}"></div>
                            </article>
                        </section>
                        <article class="boton-carga-producto">
                            <label for="producto-nuevo" method=""></label>
                            <button class="boton-guardar-producto" type="submit">actualizar Diploma</button>
                        </article>
                        <article class="boton-carga-producto">
                            <label for="volverAtrás" method=""></label>
                            <a href='/admin/admin' class="botonVistaAdministrador">Volver a la vista de administrador</a>
                        </article>
                    </section>
                </form>
                {{#if error}}
                <p>{{message}}</p>
                {{/if}}